<%= form_with model: [:admin,  @badge], local: true do |form| %>
  <%= render "shared/errors", resource: @badge %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :badge_title %>
  </p>

  <p>
    <%= form.label :img_url %>
    <%= form.text_field :img_url, id: :badge_img_url %>
  </p>

  <p>
    <%= form.label :rule %>
    <%= form.select :rule, Badge::RULES,
                           prompt: true %>
  </p>

  <p>
    <%= form.label :parameter %>
    <%= form.text_field :parameter, id: :badge_parameter %>
  </p>

  <p><%= form.submit %></p>
<% end %>