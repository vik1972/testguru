<tr>    
  <td class='align-middle'>
    <%= image_tag( badge.img_url, size: "20x30", alt: t('.alt_image_tag')) %>
  </td>
  <td class='align-middle'><%= badge.title %></td>
  <td class='align-middle'><%= badge.rule %></td>
  <td class='align-middle'><%= link_to t('admin.actions.show'), admin_badge_path(badge) %></td>
  <td class='align-middle'>
    <%= link_to t('admin.actions.edit'), 
                edit_admin_badge_path(badge),
                data: { badge_id: badge.id }
    %>
  </td>
  <td><%= link_to t('admin.actions.delete'), 
        admin_badge_path(badge), 
        method: :delete,
        data: { confirm: t('admin.actions.confirm') }
      %>
  </td>

</tr>