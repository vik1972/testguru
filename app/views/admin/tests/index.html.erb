<div class="row justify-content-center mt-3">
  <div class="col col-md-6"><h1><%= t('.header') %></h1></div>
  <div class="col-12">
    <p><%= link_to t('.new_test'), new_admin_test_path %></p>
    <%= render 'shared/errors', resource: @test%>
    <table class="table table-hover">
      <thead class="table align-middle">
        <tr>
          <th scope="col" class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %> 
          </th>
          <th scope="col"><%= t('.category') %></th>
          <th scope="col"><%= t('.level') %></th>
          <th scope="col"><%= t('.questions') %></th>
          <th scope="col"><%= t('.timer') %></th>
          <th scope="col", colspan="3", class="text-center" ><%= t('tests.index.actions') %></th>
        </tr>
      </thead>
      <tbody>
      <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>