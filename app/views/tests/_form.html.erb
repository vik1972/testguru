<%= form_with model: @test, local: true do |form| %>
  <%= render "shared/errors", resource: @test %>
  <%= form.hidden_field :author_id, :value => 1 %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :level %>
    <%= form.text_field :level, id: :test_level %>
  </p>

  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, 
                                Category.all, :id, :title, prompt: true %>
  </p>

  <p><%= form.submit %></p>
<% end %>