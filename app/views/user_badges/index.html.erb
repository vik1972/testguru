<h3 class="text-center mt-5"><%= t('.header') %></h3>
<div>
<div class="col-3">
        <%= link_to t('.badges_path'), badges_path %>
</div>
<div class="col-12">
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th scope="col" class="col-2">
          <%= t('.badge') %>
          </th>
        <th scope="col" class="col-3"><%= t('.title') %></th>
        <th scope="col" class="col-3"><%= t('.rule') %></th>
        <th scope="col" class="col-3"><%= t('.parameter') %></th>
      </tr>
    </thead>

    <tbody>
         <%= render @user_badges %>
    </tbody>
  </table>
</div>
